{
  "name": "@openapi-tools/common",
  "version": "0.1.0",
  "description": "Shared utilities for OpenAPI tools",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --project tsconfig.build.json && tsup src/index.ts --format cjs,esm --no-dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rimraf dist"
  },
  "keywords": [
    "openapi",
    "api",
    "utilities"
  ],
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  }
}