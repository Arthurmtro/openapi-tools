{
  "name": "@openapi-tools/server",
  "version": "0.1.0",
  "description": "Server-side OpenAPI tools with WebSocket support",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rimraf dist"
  },
  "keywords": [
    "openapi",
    "api",
    "server",
    "websocket",
    "rest"
  ],
  "files": [
    "dist"
  ],
  "dependencies": {
    "@openapi-tools/common": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  }
}
